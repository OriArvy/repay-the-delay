 <div id="home-header">
  <div class="text-center pt-4"><%= image_tag "logo.svg" %></div>
 </div>
 <div class="body">
   <p>YOUR JOURNEY</p>
     <%= form_tag search_path, method: :get do %>
       <div class="input-container">
          <div><i id="switch" class="spin fas fa-exchange-alt fa-lg"></i></div>
         <div class="mb-2">
           <select class="select2 form-control" name="origin" id="from_station">
            <% if current_user.nil? %>
              <option value="">From...</option>
            <% else %>
              <% if current_user.home_station.nil?  %>
                <option value="">From...</option>
              <% else %>
                <option value="<%= current_user.home_station %>">
                  <%= "Home (#{Station.all.find_by_code(current_user.home_station).name[0..-7]})" %>

                </option>
              <% end %>
            <% end %>

             <% @stations.each do |station| %>
             <option value="<%= station.code %>"
               ><%= station.name %></option>
             <% end %>
           </select>
         </div>
         <div class="mb-2">
           <select class="select2 form-control" name="destination" id="to_station">
            <% if current_user.nil? %>
              <option value="">To...</option>
            <% else %>
              <% if current_user.work_station.nil?  %>
                <option value="">To...</option>
              <% else %>
                <option value="<%= current_user.work_station %>">
                  <%= "Work (#{Station.all.find_by_code(current_user.work_station).name[0..-7]})" %></option>
              <% end %>
            <% end %>
             <% @stations.each do |station| %>
             <option value="<%= station.code %>"
               ><%= station.name %></option>
             <% end %>
           </select>
         </div>
       </div>

       <div style="display: flex; flex-direction: column;">
        <p>DEPARTURE TIME</p>
         <%= datetime_local_field(:departure, :time, id: "flat-time", class: "home-input") %>
       </div>
       <%= submit_tag("SEARCH", id: "my-btn") %>
     <% end %>

 </div>


