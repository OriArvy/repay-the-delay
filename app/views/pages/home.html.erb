<div id="home-header">
  <div class="text-center"><%= image_tag("logo.svg", :class => "home-logo") %></div>
</div>
 <div class="body-home space-bottom-footer-home">
  <div class="container-fluid col-md-8 col-lg-6">

   <p class="pt-2">YOUR JOURNEY</p>
     <%= form_tag search_path, method: :get do %>
       <div class="input-container">
          <div><i id="switch" class="spin fas fa-exchange-alt fa-lg"></i></div>
         <div class="mb-2">
           <select class="select2" style="width: 100%" name="origin" id="from_station">
            <% if current_user.nil? %>
              <option value="">From...</option>
            <% else %>
              <% if current_user.home_station.nil?  %>
                <option value="">From...</option>
              <% else %>
                <option value="<%= current_user.home_station %>">
                  <%= "Home (#{Station.all.find_by_code(current_user.home_station).name[0..-7]})" %>

                </option>
              <% end %>
            <% end %>

             <% @stations.each do |station| %>
             <option value="<%= station.code %>"
               ><%= station.name %></option>
             <% end %>
           </select>
         </div>
         <div class="mb-2">
           <select class="select2 form-control" style="width: 100%" name="destination" id="to_station">
            <% if current_user.nil? %>
              <option value="">To...</option>
            <% else %>
              <% if current_user.work_station.nil?  %>
                <option value="">To...</option>
              <% else %>
                <option value="<%= current_user.work_station %>">
                  <%= "Work (#{Station.all.find_by_code(current_user.work_station).name[0..-7]})" %></option>
              <% end %>
            <% end %>
             <% @stations.each do |station| %>
             <option value="<%= station.code %>"
               ><%= station.name %></option>
             <% end %>
           </select>
         </div>
       </div>

       <div style="display: flex; flex-direction: column;">
        <p class="pt-1">APPROX. DEPARTURE TIME</p>
         <%= datetime_local_field(:departure, :time, id: "flat-time", class: "home-input mb-3") %>
       </div>
       <%= button_tag("SEARCH", id: "my-btn") %>
     <% end %>

<div class="transition">
  <div class="dot"></div>
  <div class="dot"></div>
  <div class="dot"></div>
  <div class="dot"></div>
  <svg width="302px" height="812px" viewBox="0 0 302 812" version="1.1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
      <g stroke="none" stroke-width="10" fill="none" fill-rule="evenodd">
          <g id="path-container" transform="translate(-36.000000, 0.000000)" stroke="#FFFFFF" stroke-width="3">
              <path class="path" d="M89.5407746,-51.4788818 C31.6965704,13.2760413 22.5378592,90.769002 62.0646408,181 C121.354813,316.346497 280.02147,278.107791 313.77527,319 C347.52907,359.892209 244.82024,451.857801 226.032481,557 C207.244723,662.142199 399.51023,680.036233 313.77527,777 C228.04031,873.963767 20.5400277,818.018985 -57,866.449088 C-108.693352,898.735823 -151.693352,904.91946 -186,885"></path>
          </g>
      </g>
  </svg>
  <%= image_tag "logo.svg", alt: "alttext" %>
  </div>
</div>

