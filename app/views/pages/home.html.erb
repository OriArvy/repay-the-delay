<h1>Homepage</h1>
<%= link_to "Add a ticket", new_ticket_path %>
<p>Repay the delay</p>

<%= form_tag search_path, method: :get do %>
  <%= label_tag(:origin, "From:") %>
  <%= text_field_tag(:origin) %>

  <%= label_tag(:destination, "To:") %>
  <%= text_field_tag(:destination) %>

  <%= label_tag(:destination, "Departure") %>
  <%= datetime_local_field(:departure, :time) %>

  <%= submit_tag("Search") %>
<% end %>





