<div class="container">
  <h1 class="text-center pt-5 pb-3">Admin Dashboard</h1>
      <% @claims.each do |claim| %>
      <div id="search-card" class="p-3">
        <div class="row justify-content-between">

          <div><%= "From #{claim.location_from}" %>
          <i class="fas fa-long-arrow-alt-right"></i><%= " #{claim.location_to}" %></div>
          <div><%= "At #{claim.departure_time} on the #{claim.departure_date}" %></div>
          <div><%= cl_image_tag claim.ticket.photo, height: 80, width: 120, crop: :fill %></div>
          <div class="row justify-content-between">
            <div>
              <div class="btn btn-primary mr-3"><i class="fas fa-play"></i></div>
              <div class="btn btn-success mr-3"><i class="fas fa-check"></i></div>
              <div class="btn btn-danger"><i class="fas fa-times"></i></div>
            </div>
          </div>

        </div>
        <div class="row">
          <div><%= "Delay: #{claim.delay_duration} mins" %></div>
          <div><%= "Ticket Price: Â£#{claim.ticket.price.to_i}" %></div>
          <div><%= "Ticket Expiry: #{claim.ticket.expiry_date}" %></div>
<!--           <div><!%= "Ticket Type: #{claim.ticket.ticket_type}" %></div> -->
        </div>
        <div class="row">
          <div><%= "User: #{claim.user.title} #{claim.user.first_name} #{claim.user.last_name}" %></div>

          <div><%= "Ticket Expiry: #{claim.ticket.expiry_date}" %></div>
<!--           <div><!%= "Ticket Type: #{claim.ticket.ticket_type}" %></div> -->
        </div>
      <% end %>
    </div>
  </div>
</div>
