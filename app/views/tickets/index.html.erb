<ul id="nav-list">
  <li class="nav-li mb-1">
    <%= link_to "Claims", claims_path, class: 'nav-link' %>
  </li>
  <li class="nav-li mb-1">
    <%= link_to "Your details", edit_user_registration_path, class: 'nav-link' %>
  </li>
  <li class="nav-li mb-1">
    <%= link_to "Evidence", tickets_path, class: 'nav-link', id: "active-selection" %>
  </li>
</ul>
<div class="user-nav-pad"></div>
<div class="p-3 mt-3">
  <h2 id="claims-headers">Tickets</h2>
<div id="carouselExampleControls" class="carousel slide pt-3"  data-ride="carousel">
      <div class="fluid-container">
    <div class="row col-xs-8 col-sm-4">
  <div class="carousel-inner">

      <% current_user.tickets.each_with_index do |ticket, index| %>
    <div class="carousel-item <%= 'active' if index == 0 %>">
      <%= cl_image_tag ticket.photo, height: 150, width: 250, crop: :fill, radius: 10, class: "d-block pb-2" %>
      <p class="p-color-blue"><%= "Ticket expiry: #{ticket.expiry_date.strftime("%a, %e %b %Y")}" %></p>
    </div>
      <% end %>
  </div>

        <a id="no-op" class="carousel-control-prev ml-3 mb-2 text-left" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon mb-2" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a id="no-op" class="carousel-control-next mb-2" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon mb-2 mr-3 text-center" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>

</div>
<hr>
  <% if current_user.photo_card.nil? %>
  <h2 id="claims-headers" class="pb-3 pt-3">Photocard</h2>
  <% else %>
    <h2 id="claims-headers" class="pb-3">Photocard</h2>
    <div class="card-product">
      <div class="card-product-infos">
        <div id="search-card" class="mb-3">
          <%= cl_image_tag current_user.photo_card.photo, height: 150, width: 250, crop: :fill, radius: 10 %>
          <p class="mt-1"><strong><%= "Photo card number: #{current_user.photo_card.card_number}" %></strong></p>
        </div>
      </div>
    </div>
    <% end %>


</div>
