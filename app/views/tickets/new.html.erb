<%= simple_form_for @ticket do |f| %>
  <%= f.input :ticket_number, label: 'Please provide ticket number', placeholder: "Ticket number" %>
  <%= f.input :price, label: 'Price of your ticket', placeholder: "Price" %>
  <%= f.input :valid_from, label: 'Ticket valid from', placeholder: "Valid from?", input_html: { class: 'query'}  %>
  <%= f.input :expiry_date, label: 'Ticket expiry date', placeholder: "Expiry date"  %>
  <%= f.input :ticket_type, label: 'Please select your ticket type' %>
  <%= image_tag "", width: 300, class: "hidden", id: "photo-preview" %>
  <%= f.input :ticket_photo, input_html: { class: 'd-none', id: "photo-input" }, label_html: { class: 'upload-photo'}, label: 'ðŸ“· Upload a ticket' %>
  <%= f.submit "Add a ticket" %>
<% end %>
